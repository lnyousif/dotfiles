# EditorConfig is awesome: https://EditorConfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python, Java, Go
[*.{py,java,go}]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# JSON files
[*.json]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# JavaScript, TypeScript
[*.{js,ts,tsx,jsx}]
indent_size = 2

# CSS, SCSS, SASS
[*.{css,scss,sass,less}]
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_size = 4

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
